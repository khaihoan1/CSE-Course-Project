{% extends "index.njk" %}

{% block body %}
<div class="container">   
    <div class="card" style="width:400px;">
      <img class="card-img-top" src="/avatar/{{userImageURL}}.jpg" alt="No avatar" style="width:100%; height: 400px">
      <div class="card-body">
        <h4 class="card-title">{{user.usr}}</h4>
        <a href="/user/articles/{{user._id}}" class="btn btn-primary stretched-link">See all articles by this writer</a>
      </div>
    </div>
  </div>
{% endblock %}