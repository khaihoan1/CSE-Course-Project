{% extends "index.njk" %}
{% block links %}
<script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>
{% endblock %}

{% block body %}
<form action="/article/create/{{session.uid}}" method="POST">
    <div class="form-group">
        <label for="til">Title:</label>
        <input type="text" class="form-control" name="title" placeholder="Title of the article" id="til">
        <input type="text" value="{{session.uid}}" hidden name="uid">
    </div>
    <div class="form-group">
        <label for="categ">Category:
          <select id="categ" name="categ" id="categ">
              <option value="1">Sci & Tech</option>
              <option value="2">Debate</option>
              <option value="3">Sports</option>
              <option value="4">Games</option>
              <option value="5">Others</option>
          </select>
        </label>
    </div>
    <div class="form-group">
        <textarea id="summernote" name="content"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <script>
        $(document).ready(function() {
            $('#summernote').summernote();
        });
    </script>
{% endblock %}

